@{
    ViewBag.Title = "AdminDeleteStudent";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

@using EAD_project.Models;

@*============Middle Div about Delete Students *@
 

<div class="col-sm-5" style="margin:0px; padding:0px">

    <div>
        <h3 style="font-family:Georgia; margin-left:8px; color:#a94442"><b>Delete Student</b></h3>
    </div>

    <div class="panel panel-danger" style="margin: 80px 0px 0px 80px">
 
        <table class="table">
            
            <tr style="background-color:#f2dede;">
                <td style="text-align:center; color:#a94442"><b>Student ID</b></td>
                <td style="text-align:center; color:#a94442"><b>Student Name</b></td>
                <td style="text-align:center; color:#a94442"><b>Father Name</b></td>
                <td style="text-align:center; color:#a94442"><b>Operation</b></td>
            </tr>

            @foreach (student s in Model)
            {
                    <tr>
                        <td style="text-align:center">@s.student_id</td>
                        <td style="text-align:center">@s.student_name</td>
                        <td style="text-align:center">@s.father_name</td>
                        <td style="text-align:center">
                            <form action="/Admin/AdminDeleteStudentNow/@s.student_id" onsubmit="return agree()">
                                <input type="submit" value="Delete" style="border:none; border-radius:3px; color:white;font-weight:600" class="btn-warning"/>
                            </form>
                            
                        </td>
                    </tr>
            }    
           
        </table>
    </div>

</div>

<script>

    function agree()
    {
        var x = confirm("Are you sure?");
        if (x == true)
            return true;
        else
            return false;
    }
    
</script>