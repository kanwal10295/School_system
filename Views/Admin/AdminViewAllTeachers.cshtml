@{
    ViewBag.Title = "AdminViewAllTeachers";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

@using EAD_project.Models;

@*============Middle Div about View All Students *@
        
<div class="col-sm-5" style="margin:0px; padding:0px">

    <div>
        <h3 style="font-family:Georgia; margin-left:8px; color:#a94442"><b>All Teachers</b></h3>
    </div>

    <div class="panel panel-danger" style="margin: 80px 0px 0px 80px">
 
        <table class="table">
            
            <tr style="background-color:#f2dede">
                <td style="text-align:center; color:#a94442"><b>Teacher Name</b></td>
                <td style="text-align:center; color:#a94442"><b>Teacher ID</b></td>
                <td style="text-align:center; color:#a94442"><b>Education</b></td>
                <td style="text-align:center; color:#a94442"><b>Joining Date</b></td>
                <td style="text-align:center; color:#a94442"><b>Salary</b></td>
            </tr>

            @foreach(teacher s in Model)
            {
                    <tr>
                        <td style="text-align:center">@s.teacher_name</td>
                        <td style="text-align:center">@s.teacher_id</td>
                        <td style="text-align:center">@s.education</td>
                        <td style="text-align:center">@s.teacher_joining_date</td>
                        <td style="text-align:center">@s.teacher_salary</td>
                    </tr>            
                }

        </table>
    </div>

</div>